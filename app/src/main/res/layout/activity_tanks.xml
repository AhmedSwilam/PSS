<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shiftresize">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanks Daily Value Input"
                android:textSize="@dimen/_14ssp"
                android:layout_marginHorizontal="@dimen/_80sdp"
                android:layout_marginTop="@dimen/_16sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_50sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="Data Input Mode"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="normal" />

                <com.zcw.togglebutton.ToggleButton
                    android:id="@+id/toggele_static"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_16sdp"
                    toggle:tbOffBorderColor="#E0E1E3"
                    toggle:tbOffColor="#FFFFFD"
                    toggle:tbOnColor="#03D38B"
                    toggle:tbSpotColor="#ffffff" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lin_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_80sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:text="Shift From"
                    android:textSize="@dimen/_7ssp"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_120sdp"
                    android:text="Shift To"
                    android:textSize="@dimen/_7ssp"
                    android:textStyle="italic" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/lin_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin_1"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_start_shift"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:background="#E9ECF1"
                    android:textSize="@dimen/_8ssp" />

                <TextView
                    android:id="@+id/txt_end_shift"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_46sdp"
                    android:background="#E9ECF1"
                    android:textSize="@dimen/_8ssp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin_date"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lin_header"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tank No."
                        android:textSize="@dimen/_8ssp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Content"
                        android:textSize="@dimen/_8ssp"
                        android:layout_marginStart="@dimen/_18sdp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Evaporation%"
                        android:textSize="@dimen/_8ssp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Measure"
                        android:textSize="@dimen/_8ssp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last Shift Qty."
                        android:textSize="@dimen/_8ssp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End Qty."
                        android:textSize="@dimen/_8ssp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Consumption"
                        android:textSize="@dimen/_8ssp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:textStyle="bold"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lin1"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tank 1"
                        android:textSize="@dimen/_8ssp"
                        android:textStyle="bold"/>
                    <com.zcw.togglebutton.ToggleButton
                        android:id="@+id/toggele2"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_marginStart="@dimen/_1sdp"
                        toggle:tbOffBorderColor="#C4C2CD"
                        toggle:tbOffColor="#ddd"
                        toggle:tbOnColor="#9CD143"
                        toggle:tbSpotColor="#ffffff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fuel 90"
                        android:textSize="@dimen/_8ssp"
                        android:layout_marginStart="@dimen/_10sdp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100%"
                        android:textSize="@dimen/_8ssp"
                        android:layout_marginStart="@dimen/_18sdp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.33"
                        android:textSize="@dimen/_8ssp"
                        android:layout_marginStart="@dimen/_30sdp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12500"
                        android:textSize="@dimen/_8ssp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11000"
                        android:textSize="@dimen/_8ssp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1500"
                        android:textSize="@dimen/_8ssp"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:textStyle="bold"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lin2"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tank 1"
                        android:textSize="@dimen/_8ssp"
                        android:textStyle="bold"/>
                    <com.zcw.togglebutton.ToggleButton
                        android:id="@+id/toggele3"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_1sdp"
                        toggle:tbOffBorderColor="#C4C2CD"
                        toggle:tbOffColor="#ddd"
                        toggle:tbOnColor="#9CD143"
                        toggle:tbSpotColor="#ffffff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fuel 90"
                        android:textSize="@dimen/_8ssp"
                        android:layout_marginStart="@dimen/_10sdp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100%"
                        android:textSize="@dimen/_8ssp"
                        android:layout_marginStart="@dimen/_18sdp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.33"
                        android:textSize="@dimen/_8ssp"
                        android:layout_marginStart="@dimen/_30sdp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12500"
                        android:textSize="@dimen/_8ssp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11000"
                        android:textSize="@dimen/_8ssp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1500"
                        android:textSize="@dimen/_8ssp"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:textStyle="bold"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lin3"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tank 1"
                        android:textSize="@dimen/_8ssp"
                        android:textStyle="bold"/>
                    <com.zcw.togglebutton.ToggleButton
                        android:id="@+id/toggele1"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_marginStart="@dimen/_1sdp"
                        toggle:tbOffBorderColor="#C4C2CD"
                        toggle:tbOffColor="#ddd"
                        toggle:tbOnColor="#9CD143"
                        toggle:tbSpotColor="#ffffff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fuel 90"
                        android:textSize="@dimen/_8ssp"
                        android:layout_marginStart="@dimen/_10sdp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100%"
                        android:textSize="@dimen/_8ssp"
                        android:layout_marginStart="@dimen/_18sdp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.33"
                        android:textSize="@dimen/_8ssp"
                        android:layout_marginStart="@dimen/_30sdp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12500"
                        android:textSize="@dimen/_8ssp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11000"
                        android:textSize="@dimen/_8ssp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1500"
                        android:textSize="@dimen/_8ssp"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:textStyle="bold"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <Button
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:text="Save &amp;  Exit"
                    tools:ignore="HardcodedText"
                    android:textSize="@dimen/_15ssp"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/_270sdp"
                    android:layout_marginStart="@dimen/_24sdp"
                    android:background="#0099F1"/>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>



</LinearLayout>